@model UpdateAboutDto

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Staff/Index">Hakkımızda</a></li>
            <li class="breadcrumb-item active"><a href="/Staff/AddStaff">Hakkımızda Güncelleme Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">HakkımızdaHakkımızda Güncelleme Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Hakkımızda bilgilerini <code>eksiksiz</code> doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            <input type="hidden" asp-for="AboutID" />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Başlık 1</label>
                                <input type="text" asp-for="Title1" class="form-control input-rounded col-sm-10" placeholder="Personelin isim ve soyisim bilgilerini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Başlık 2</label>
                                <input type="text" asp-for="Title2" class="form-control input-rounded col-sm-10" placeholder="Personelin ünvan bilgisini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">İçerik</label>
                                <textarea type="text" asp-for="Content" class="form-control input-rounded col-sm-10" placeholder="Personelin facebook linkini giriniz."></textarea>
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Oda Sayısı</label>
                                <input type="text" asp-for="RoomCount" class="form-control input-rounded col-sm-10" placeholder="Personelin twitter linkini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Personel Sayısı</label>
                                <input type="text" asp-for="StaffCount" class="form-control input-rounded col-sm-10" placeholder="Personelin instagram linkini giriniz.">
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Misafir Sayısı</label>
                                <input type="text" asp-for="CustomerCount" class="form-control input-rounded col-sm-10" placeholder="Personelin instagram linkini giriniz.">
                            </div>
                            <hr />
                            <button class="btn btn-outline-primary col-12">Hakkımızda Bilgisini Güncelle!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

