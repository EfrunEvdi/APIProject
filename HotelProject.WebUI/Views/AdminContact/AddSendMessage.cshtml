@model CreateSendMessage

@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Mesajlar</a></li>
            <li class="breadcrumb-item active">
                <a href="javascript:void(0)">Yeni Mesaj Oluşturma Sayfası</a>
            </li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        @await Html.PartialAsync("SidebarAdminContactPartial")
                        @await Html.PartialAsync("SidebarAdminContactKategoriPartial")
                    </div>
                    <div class="email-right-box">
                        <div class="toolbar" role="toolbar">
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-archive"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-exclamation-circle"></i>
                                </button>
                                <button type="button" class="btn btn-light">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-folder"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Taşı</span>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>  <a class="dropdown-item" href="javascript: void(0);">Güncelleme</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-tag"></i>  <b class="caret m-l-5"></b>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Etiketler:</span>  <a class="dropdown-item" href="javascript: void(0);">Güncelleme</a>  <a class="dropdown-item" href="javascript: void(0);">Sosyal</a>  <a class="dropdown-item" href="javascript: void(0);">Promosyon</a>
                                    <a class="dropdown-item" href="javascript: void(0);">Forum</a>
                                </div>
                            </div>
                            <div class="btn-group m-b-20">
                                <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                                    Daha Fazla <span class="caret m-l-5"></span>
                                </button>
                                <div class="dropdown-menu">
                                    <span class="dropdown-header">Daha Fazla Seçenek :</span>  <a class="dropdown-item" href="javascript: void(0);">Okunmamış Olarak İşaretle</a>  <a class="dropdown-item" href="javascript: void(0);">Görev Ekle</a>  <a class="dropdown-item" href="javascript: void(0);">Yıldızla</a>  <a class="dropdown-item" href="javascript: void(0);">Sessize Al</a>
                                </div>
                            </div>
                        </div>
                        <div class="compose-content mt-5">
                            <form method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="ReceiverName" class="form-control bg-transparent" placeholder="Alıcı Adı Soyadı">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="ReceiverMail" class="form-control bg-transparent" placeholder="Alıcı Mail">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Title" class="form-control bg-transparent" placeholder="Konu">
                                </div>
                                <div class="form-group">
                                    <textarea asp-for="Content" class="textarea_editor form-control bg-light" rows="15" placeholder="Mesajınız..."></textarea>
                                </div>
                                <div class="text-left m-t-15">
                                    <button type="submit" class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i> Gönder</button>
                                    <button type="reset" class="btn btn-dark m-b-30 m-t-15 f-s-14 p-l-20 p-r-20"><i class="ti-close m-r-5 f-s-12"></i> Vazgeç</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>