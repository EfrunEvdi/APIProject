@model AdminMailViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Mail Gönderme Sayfası</h4>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>Alıcı Mail Adresi</label>
                                    <input type="email" asp-for="RecevierEmail" class="form-control" placeholder="Alıcı mail bilgisini giriniz.">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Konu</label>
                                    <input type="text" asp-for="Subject" class="form-control" placeholder="Konu bilgisini giriniz.">
                                </div>
                                <div class="form-group col-md-12">
                                    <label>İçerik</label>
                                    <textarea rows="10" type="text" asp-for="Body" class="form-control" placeholder="İçerik bilgisini giriniz."></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-outline-primary col-12">Gönder</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>