﻿@using HotelProject.WebUI.Models.Role
@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/AdminRoleAssign/Index">Roller</a></li>
            <li class="breadcrumb-item active"><a href="/AdminRoleAssign/AssignRole">Rol Atama Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Rol Atama Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Rol atama bilgilerini <code>eksiksiz</code> doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-group row form-check px-5">
                                    <input type="hidden" asp-for="@Model[i].RoleID" />
                                    <input type="hidden" asp-for="@Model[i].RoleName" />
                                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                                </div>
                                <hr />
                            }
                            <button class="btn btn-outline-primary col-12">Rol Ata!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>