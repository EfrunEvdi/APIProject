@model CreateServiceDto

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/AdminService/Index">Hizmetler</a></li>
            <li class="breadcrumb-item active"><a href="/AdminService/AddService">Hizmet Ekleme Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmet Ekleme Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Hizmet bilgilerini <code>eksiksiz</code> doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Hizmet İkon</label>
                                <input type="text" asp-for="ServiceIcon" class="form-control input-rounded col-sm-10" placeholder="Hizmetin ikon uzantısını giriniz.">
                                <span asp-validation-for="ServiceIcon" class="text-danger"></span>
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Başlık</label>
                                <input type="text" asp-for="Title" class="form-control input-rounded col-sm-10" placeholder="Hizmetin başlık bilgisini giriniz.">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Hizmet Açıklaması</label>
                                <textarea asp-for="Description" class="form-control input-rounded col-sm-10" placeholder="Hizmetin açıklamasını giriniz."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <hr />
                            <button class="btn btn-outline-primary col-12">Yeni Hizmet Ekle!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>