@model AddStaffViewModel

@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Staff/Index">Personeller</a></li>
            <li class="breadcrumb-item active"><a href="/Staff/AddStaff">Personel Ekleme Sayfası</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Personel Ekleme Sayfası</h4>
                    <p class="text-muted m-b-15 f-s-12">Personel bilgileri <code>eksiksiz</code> doldurunuz.</p>
                    <div class="basic-form">
                        <form method="post">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">İsim Soyisim</label>
                                <input type="text" asp-for="Name" class="form-control input-rounded col-sm-10" placeholder="Personelin isim ve soyisim bilgilerini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Ünvan</label>
                                <input type="text" asp-for="Title" class="form-control input-rounded col-sm-10" placeholder="Personelin ünvan bilgisini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Facebook Link</label>
                                <input type="text" asp-for="SocialMedia1" class="form-control input-rounded col-sm-10" placeholder="Personelin facebook linkini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Twitter Link</label>
                                <input type="text" asp-for="SocialMedia2" class="form-control input-rounded col-sm-10" placeholder="Personelin twitter linkini giriniz.">
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">İnstagram Link</label>
                                <input type="text" asp-for="SocialMedia3" class="form-control input-rounded col-sm-10" placeholder="Personelin instagram linkini giriniz.">
                            </div>
                            <hr />
                            <button class="btn btn-outline-primary col-12">Yeni Personel Ekle!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>