@model List<TestimonialViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard/Index">Ana Sayfa</a></li>
            <li class="breadcrumb-item active"><a href="/Testimonial/Index">Referanslar</a></li>
        </ol>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Personeller</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped verticle-middle text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Referans Adı</th>
                                    <th scope="col">Referans Ünvanı</th>
                                    <th scope="col">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    Random random = new Random();
                                    List<string> strings = new List<string>() { "gradient-1", "gradient-2", "gradient-3", "gradient-4", "gradient-5", "gradient-6", "gradient-7", "gradient-8", "gradient-9" };
                                    int randomIndex = random.Next(strings.Count);
                                    string randomString = strings[randomIndex];

                                    <tr>
                                        <td>@item.TestimonialID</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <span class="label @randomString btn-rounded">@item.Title</span>
                                        </td>
                                        <td>
                                            <span>
                                                <a href="#" data-toggle="tooltip" data-placement="top" title="Detaylar"><i class="fa fa-file-text-o color-primary"></i></a>
                                                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" data-toggle="tooltip" data-placement="top" title="Güncelle"><i class="fa fa-pencil color-muted m-r-5"></i></a>
                                                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-close color-danger"></i></a>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Testimonial/AddTestimonial" class="btn btn-outline-primary col-12">Yeni Personel Ekle!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

